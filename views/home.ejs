<!doctype html>
<html>
<head>
    <title>AmI</title>
	<script language="javascript" type="text/javascript">
    window.history.forward();
</script>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body        { padding-top:0px; word-wrap:break-word; }
		.form-control {width:500px;}
		div > div > div > div.well       {width: 550px;height: 175px;max-width: 550px;max-height: 175px;}
		div > div > div > div > div.well       {width: 550px;height: 350px;max-width: 550px;max-height: 350px;}
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span>  AmI Chatrooms</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
		<a href="/profile" class="btn btn-default btn-sm">Profile</a>
    </div>

	
	
	<div class="row">
    <div class="col-sm-6">
            <div class="well">
			<form action="/signup" method="post">
				<div class="form-group">
				<label>Chat Room</label>
				<input type="text" class="form-control" placeholder="Enter chatroom's name" name="chatName">
				</div>


				<button type="submit" class="btn btn-warning btn-lg">Create</button>
			</form>
			</div>
	</div>
	
	
    <div class="col-sm-6">
			<div class="well">
				<div class="form-group">
				<label>Chat Rooms Available</label>
				</div>


			</div>
	</div>
	
	</div>
	
	
	
	<div class="row">
	 <div class="col-sm-6">
			<div>
			<div class="well">
            
			
			<div class="form-group">
			<input type="text" maxlength="6" class="form-control" placeholder="Type a message.." name="message">
			</div>
			

			</div>
			</div>
	</div>
	<div class="col-sm-6">
			<div>
			<div class="well">
			<label>Members Online</label>
			</div>
			</div>
	</div>		
	</div>
	

</div>
</body>
</html>